
def selfrec(i:Int)
    return unless i > 0
    $puts "Selfrec $i"
    selfrec(i-1)

selfrec(4)

def ping(i:Int)
    return unless i > 0
    $puts "Ping $i"
    pong(i-1)

def pong(i:Int)
    return unless i > 0
    $puts "Pong $i"
    ping(i-1)

ping(5)


def foo(x:Int):Int
    if x == 5
        return baz(x)
    return x - 1

def baz(x:Int)
    if x == 99
        return foo(x)
    return x + 1

$puts "$(foo(5))"
$puts "$(baz(99))"

