
def sqr(self:Num):Num
    return self*self or fail

x := 5.
s := x|sqr
$puts("$x|sqr = $s")

s |= sqr
$puts("$x|sqr|sqr = $s")

struct Vec{x:Num,y:Num}

def len(v:Vec):Num
    l := $sqrt(v.x*v.x + v.y*v.y):Num
    return l

v := Vec{1., 1.}
$puts("$v|len = $(v|len)")
$puts("$v|len|sqr = $(v | len | sqr)")

def add(v:Vec, other:Vec):Vec
    return Vec{v.x + other.x, v.y + other.y}

$puts("$v|add(Vec{10.,10.}) = $(v | add(Vec{10., 10.}))")

v |= add(Vec{100.,100.})
$puts("$v|=... = $v")
